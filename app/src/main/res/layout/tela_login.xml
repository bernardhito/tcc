<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/senha"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/cadeado_certo"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Digite a sua senha"
        android:inputType="numberPassword"
        android:paddingLeft="30dp"
        android:textColorHint="#007036"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="355dp" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Esqueci minha senha"
        android:textSize="10dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#007036"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="405dp" />


    <EditText
        android:id="@+id/login"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/outline_alternate_email_24"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Digite o seu email"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:textColorHint="#007036"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="270dp" />


    <LinearLayout
        android:id="@+id/botao_logar"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:background="@drawable/botao_gradiente"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="438dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Entrar"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="600dp"
        android:layout_height="900dp"
        app:srcCompat="@drawable/wave_certa_baixo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-95dp"
        tools:layout_editor_absoluteY="248dp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="656dp"
        android:layout_height="432dp"
        app:srcCompat="@drawable/onda_topo_certa"
        tools:layout_editor_absoluteX="-172dp"
        tools:layout_editor_absoluteY="-147dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="290dp"
        android:layout_height="51dp"
        android:rotation="-2"
        app:srcCompat="@drawable/logo_app_2"
        tools:layout_editor_absoluteX="-94dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="274dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-light"
        android:text="Fazer Cadastro"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-light"
        android:text="ou entre com"
        android:textSize="15dp"
        android:textColor="#33c0b2"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="506dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/instagram_icone_noir"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="540dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/icone_google"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="540dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>