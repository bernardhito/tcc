<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/papelazul"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_welcome"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="-150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Cuidar da sua saúde física nunca foi tão fácil."
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="266dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="428dp">

        <!-- Botão Entrar -->
        <LinearLayout
            android:id="@+id/botao_acessarconta"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:background="@drawable/botao_branco"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acessar conta"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/azulwelcome"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botão Cadastrar -->
        <LinearLayout
            android:id="@+id/botao_criarconta"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:background="@drawable/contorno_branco"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar conta"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>