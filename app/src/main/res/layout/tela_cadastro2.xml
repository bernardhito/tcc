        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:id="@+id/senha_cadastro"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroundblack"
        android:drawableLeft="@drawable/cadeadoblack"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="306dp" />

    <EditText
        android:id="@+id/email_cadastro"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroundblack"
        android:drawableLeft="@drawable/emailblack"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="236dp" />

    <EditText
        android:id="@+id/confirmar_senha"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroundblack"
        android:drawableLeft="@drawable/cadeadoblack"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-light"
        android:hint="Confirmar senha"
        android:inputType="numberPassword"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="380dp" />

    <LinearLayout
        android:id="@+id/botao_cadastrar"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:background="@drawable/botao_gradiente"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="459dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/instagram_icone_noir"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="565dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/icone_google"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="565dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-light"
        android:text="ou entre com"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="531dp" />

